{{#if @item.isCompleted}}
  <div class="c-item__project-pie js-project-pie" title="Mark project as incomplete" {{action @uncompleteItem @item}}>
    {{svg-jar "completed-project" class="c-item__project-pie-icon" }}
  </div>
{{else}}
  <div class="c-item__project-pie js-project-pie" title="Mark project as complete" {{action @completeItem @item}}>
    {{progress-pie class="c-item__project-pie-icon" progress=@item.progress}}
  </div>
{{/if}}

{{#if @item.isShownInLogbook}}
  <div class="c-item__completed-at">
    {{@item.completedAtDisplay}}
  </div>
{{/if}}

<div
  class="c-item__name {{if (not @item.name) 'c-item__name--placeholder'}}"
  data-test-task-name
>
  {{if @item.name @item.name this.placeholder}}
</div>