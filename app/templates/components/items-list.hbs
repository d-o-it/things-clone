{{#if @isNotSortable}}
  {{#animated-container}}
    {{#animated-each @items use=eachTransition duration=200 as |item|}}
      <div
        class="{{if (is-selected item) 'is-selected'}}"
      >
        {{#if item.isProject}}
          {{items-project
            item=item
            updateItemName=(route-action "updateItemName")
            updateItemNotes=(route-action "updateItemNotes")
            completeItem=(route-action "completeItem")
            uncompleteItem=(route-action "uncompleteItem")
            selectBetween=@selectBetween
          }}
        {{else}}
          {{items-task
            task=item
            updateItemName=(route-action "updateItemName")
            updateItemNotes=(route-action "updateItemNotes")
            completeItem=(route-action "completeItem")
            uncompleteItem=(route-action "uncompleteItem")
            setItemsDeadline=(route-action "setItemsDeadline")
            selectBetween=@selectBetween
          }}
        {{/if}}
      </div>
    {{/animated-each}}
  {{/animated-container}}
{{else}}
  {{#sortable-group onChange=(route-action "reorderItems") as |group|}}
    {{#animated-container}}
      {{#animated-each @items use=eachTransition duration=200 as |item|}}
        {{#sortable-item
          class=(if (is-selected item) 'is-selected')
          model=item
          group=group
          distance=2
          handle=".is-sortable"
        }}
          {{#if item.isProject}}
            {{items-project
              item=item
              updateItemName=(route-action "updateItemName")
              updateItemNotes=(route-action "updateItemNotes")
              completeItem=(route-action "completeItem")
              uncompleteItem=(route-action "uncompleteItem")
              selectBetween=@selectBetween
            }}
          {{else}}
            {{items-task
              task=item
              updateItemName=(route-action "updateItemName")
              updateItemNotes=(route-action "updateItemNotes")
              completeItem=(route-action "completeItem")
              uncompleteItem=(route-action "uncompleteItem")
              setItemsDeadline=(route-action "setItemsDeadline")
              selectBetween=@selectBetween
            }}
          {{/if}}
        {{/sortable-item}}
      {{/animated-each}}
    {{/animated-container}}
  {{/sortable-group}}
{{/if}}