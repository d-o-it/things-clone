<h1 class="c-folder__title">
  {{svg-jar @folder class=(concat "c-folder__title-icon c-folder__title-icon--" @folder)}}
  <div class="c-folder__title-text">{{or @folderTitle @folder}}</div>
</h1>

{{#animated-if hasItems use=fade duration=200}}
  {{yield (action "selectBetween")}}
{{else}}
  {{list-placeholder folder=@folder}}
{{/animated-if}}
