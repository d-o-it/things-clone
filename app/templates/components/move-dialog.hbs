{{#modal-dialog
  class="js-items-actions"
  title="Move"
  close=@close
}}
  <div class="c-dialog__options">
    <div class="c-dialog__section">
      {{#each (array "inbox" "today" "anytime" "someday") as |folder|}}
        <div class="c-dialog__options-item u-capitalize" {{action (queue (action @moveToFolder folder) @close)}}>
          {{svg-jar folder class="c-dialog__options-icon"}}

          <div class="c-dialog__options-text">
            {{folder}}
          </div>
        </div>
      {{/each}}
    </div>

    <div class="c-dialog__section">
      <div class="c-dialog__options-item" {{action (queue (action @moveToProject null) @close)}}>
        {{svg-jar "no" class="c-dialog__options-icon c-dialog__options-icon--no"}}

        <div class="c-dialog__options-text">No project</div>
      </div>

      {{#each @activeProjects as |project|}}
        <div class="c-dialog__options-item" {{action (queue (action @moveToProject project) @close)}}>
          {{progress-pie
            class="c-dialog__options-icon"
            progress=project.progress
          }}

          <div class="c-dialog__options-text">
            {{or project.name 'New project'}}
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{/modal-dialog}}