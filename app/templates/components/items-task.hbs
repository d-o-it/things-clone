{{#if isEditing}}
  {{task-form
    task=this.taskEditor.task
    placeholder=this.placeholder
    stopEditing=(action "stopEditing")
    deleteTask=(route-action "deleteItems" @task)
  }}
{{else}}
  {{task-info
    task=@task
    placeholder=this.placeholder
    isTimeShown=this.isTimeShown
    isProjectShown=this.isProjectShown
    toggleCheckbox=(action "toggleCheckbox")
  }}
{{/if}}
