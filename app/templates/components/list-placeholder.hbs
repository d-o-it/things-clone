<div class="c-placeholder" data-test-folder-placeholder>
  {{#if (not-eq @folder "project")}}
    {{svg-jar @folder  class="c-placeholder__icon"}}
  {{/if}}

  {{#if (and (not-eq @folder "upcoming") (not-eq @folder "logbook") (not-eq @folder "trash"))}}
    <div class="c-placeholder__tips">
      <div class="c-placeholder__tips-item">
        <div class="c-placeholder__tips-text">{{t "list-placeholder.c-placeholder-tips.show_all" }}</div>
        <div class="c-placeholder__tips-key">?</div>
      </div>

      <div class="c-placeholder__tips-item">
        <div class="c-placeholder__tips-text">{{t "list-placeholder.c-placeholder-tips.create" }}</div>
        <div class="c-placeholder__tips-key">{{t "list-placeholder.c-placeholder-tips.n" }}</div>
      </div>
    </div>
  {{/if}}
</div>