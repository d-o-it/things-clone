<div class="l-container__sidebar">
  <div class="l-container__content"></div>
  <div class="l-container__footer"></div>
</div>

<div class="l-container__main {{if this.isEditMode 'is-edit-mode'}}">
  <div class="l-container__content l-container__content--main">
    {{task-list
      tasks=@tasks
      saveTask=@saveTask
      completeTask=@completeTask
      uncompleteTask=@uncompleteTask
    }}
  </div>

  <div class="l-container__footer">
    <div class="c-main-actions">
      <div class="c-main-actions__item" {{action @createTask}}>
        {{svg-jar "plus" width="12px" height="12px"}}
      </div>
    </div>
  </div>
</div>
