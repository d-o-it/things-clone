{{#sortable-group class="c-task-list" onChange=@reorderTasks as |group|}}
  {{#each @tasks as |task|}}
    {{#sortable-item
      model=task
      group=group
      distance=2
      class=(if (is-selected task) 'is-selected')
      data-test-task-wrapper=task.id
    }}
      {{task-item
        task=task
        saveTask=@saveTask
        completeTask=@completeTask
        uncompleteTask=@uncompleteTask
        selectBetween=(action "selectBetween")
        data-test-task=task.id
      }}
    {{/sortable-item}}
  {{/each}}
{{/sortable-group}}
