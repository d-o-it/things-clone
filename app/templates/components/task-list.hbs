{{#sortable-group class="c-task-list" onChange=@reorderTasks as |group|}}
  {{#each @tasks as |task|}}
    {{#sortable-item model=task group=group distance=2}}
      {{task-item
        task=task
        saveTask=@saveTask
        completeTask=@completeTask
        uncompleteTask=@uncompleteTask
        data-test-task=task.id
      }}
    {{/sortable-item}}
  {{/each}}
{{/sortable-group}}
