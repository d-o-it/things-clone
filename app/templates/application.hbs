{{#app-container
  markItemsAs=(route-action "markItemsAs")
  reorderItems=(route-action "reorderItems")
  setItemsWhen=(route-action "setItemsWhen")
  setItemsDeadline=(route-action "setItemsDeadline")
  setItemsTags=(route-action "setItemsTags")
  moveTasksToInbox=(route-action "moveTasksToInbox")
  moveTasksToProject=(route-action "moveTasksToProject")
  createTask=(route-action "createTask")
  createProject=(route-action "createProject")
  deleteItems=(route-action "deleteItems")
  undeleteItems=(route-action "undeleteItems")
}}
  {{outlet}}
{{/app-container}}

{{#from-elsewhere name="modal" as |modal|}}
  {{#if modal}}
    {{#modal-dialog
      class="js-items-actions"
      title=modal.title
      close=modal.close
    }}
      {{component modal.body}}
    {{/modal-dialog}}
  {{/if}}
{{/from-elsewhere}}