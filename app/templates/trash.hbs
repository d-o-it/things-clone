{{#app-main
  hasContent=this.hasContent
  folder="trash"
  as |selectBetween|
}}
  <div class="c-folder__buttons">
    <button
      class="c-folder__button c-folder__button--action"
    >
      {{t "trash.c-folder.button.empty"}}

      {{#attach-popover
        class="c-popover"
        placement="bottom"
        showOn="click"
        hideOn="clickout escapekey"
      }}
        <div class="c-popover__inner">
          <div class="c-popover__title">
            {{t "trash.c-popover.title"}}
          </div>

          <div
            class="c-popover__option c-popover__option--danger"
            {{action (route-action "destroyDeletedItems")}}
          >
            {{t "trash.c-folder.button.empty"}}
          </div>
        </div>
      {{/attach-popover}}
    </button>
  </div>

  {{items-list
    items=(sort-by "deletedAt:desc" this.items)
    isSortable=false
    selectBetween=selectBetween
  }}
{{/app-main}}