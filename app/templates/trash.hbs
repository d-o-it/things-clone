{{#app-main
  hasContent=this.hasContent
  folder="trash"
  as |selectBetween|
}}
  <div class="c-folder__buttons">
    <button
      class="c-folder__button c-folder__button--action"
      {{action (route-action "destroyDeletedItems")}}
    >
      Empty Trash
    </button>
  </div>

  {{items-list
    items=(sort-by "deletedAt:desc" this.items)
    isNotSortable=true
    updateItemName=(route-action "updateItemName")
    completeItem=(route-action "completeItem")
    uncompleteItem=(route-action "uncompleteItem")
    selectBetween=selectBetween
  }}
{{/app-main}}