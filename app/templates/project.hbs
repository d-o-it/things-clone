{{#app-main
  hasContent=this.hasContent
  folder="project"
  project=this.project
  updateProjectName=(route-action "updateItemName" this.project)
  completeProject=(route-action "completeItem" this.project)
  uncompleteProject=(route-action "uncompleteItem" this.project)
  deleteProject=(pipe (route-action "deleteItem" this.project) (route-action "replaceRoute" "today"))
  undeleteProject=(route-action "undeleteItem" this.project)
  as |selectBetween|
}}
  <div class="c-folder__group">
    {{items-list
      items=(sort-by "order" this.anytimeTasks)
      updateItemName=(route-action "updateItemName")
      updateItemNotes=(route-action "updateItemNotes")
      completeItem=(route-action "completeItem")
      uncompleteItem=(route-action "uncompleteItem")
      reorderItems=(route-action "reorderItems")
      selectBetween=selectBetween
    }}
  </div>

  {{#if hasSomeday}}
    <div class="c-folder__buttons">
      <button class="c-folder__button" {{action (toggle "areLaterItemsShown" this)}}>
        {{if this.areLaterItemsShown "Hide" "Show"}} later items
      </button>
    </div>
  {{/if}}

  {{#animated-container}}
    {{#animated-if this.areLaterItemsShown use=fade duration=200}}
      <div class="c-folder__group">
        {{items-list
          items=(sort-by "order" this.somedayTasks)
          updateItemName=(route-action "updateItemName")
          updateItemNotes=(route-action "updateItemNotes")
          completeItem=(route-action "completeItem")
          uncompleteItem=(route-action "uncompleteItem")
          reorderItems=(route-action "reorderItems")
          selectBetween=selectBetween
        }}
      </div>
    {{/animated-if}}
  {{/animated-container}}

  {{#if hasLogbook}}
    <div class="c-folder__buttons">
      <button class="c-folder__button" {{action (toggle "areLoggedItemsShown" this)}}>
        {{if this.areLoggedItemsShown "Hide" "Show"}} logged items
      </button>
    </div>
  {{/if}}

  {{#animated-container}}
    {{#animated-if this.areLoggedItemsShown use=fade duration=200}}
      <div class="c-folder__group">
        {{items-list
          items=(sort-by "order" this.logbookTasks)
          isNotSortable=true
          updateItemName=(route-action "updateItemName")
          updateItemNotes=(route-action "updateItemNotes")
          completeItem=(route-action "completeItem")
          uncompleteItem=(route-action "uncompleteItem")
          selectBetween=selectBetween
        }}
      </div>
    {{/animated-if}}
  {{/animated-container}}
{{/app-main}}